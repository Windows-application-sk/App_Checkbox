<Page
    x:Class="App_Checkbox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_Checkbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <CheckBox x:Name="checkBox1" Content="チェックボックス1"
              Checked="CheckBox_StateChanged" Unchecked="CheckBox_StateChanged"/>
            <CheckBox x:Name="checkBox2" Content="チェックボックス2"
              Checked="CheckBox_StateChanged" Unchecked="CheckBox_StateChanged"/>
        </StackPanel>
    </StackPanel>
</Page>
